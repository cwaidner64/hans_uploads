{
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "name": "server",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start:dfx": "dfx start --background || exit 0",
    "start": "npm run start:dfx && vite",
    "seed": "npx ts-node -O '{\"module\": \"CommonJS\"}' scripts/seed.ts",
    "deploy": "npm run start:dfx && dfx deploy",
    "test": "echo 'configure vitest or jest manually'"
  },
  "dependencies": {
    "@dfinity/agent": "^2.4.1",
    "@dfinity/auth-client": "^2.4.1",
    "@dfinity/identity": "^2.4.1",
    "lodash.debounce": "^4.0.8",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-lottie-player": "^2.1.0",
    "react-router-dom": "^7.5.2",
    "react-transition-group": "^4.4.5",
    "simple-cbor": "0.4.1"
  },
  "devDependencies": {
    "@types/history": "^4.7.11",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.0.0",
    "sass-embedded": "^1.87.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": 0
    }
  },
  "browserslist": {
    "production": [
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version",
      "last 2 edge version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
